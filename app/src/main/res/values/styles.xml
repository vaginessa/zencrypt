<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/appBarTextColor</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/appBarTextColor</item>
    </style>

    <style name="ButtonColorDay" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/ZenCryptPrimary</item>
    </style>

    <style name="ButtonColorNight" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/ZenCryptSecondaryLight</item>
    </style>

    <attr name="navMenuColor" format="reference"/>

    <attr name="appBarTextColor" format="reference"/>
    <attr name="appBarTitleIcon" format="reference"/>


    <attr name="encrypted_file_drawable" format="reference"/>
    <attr name="decrypted_file_drawable" format="reference"/>

    <attr name="info_icon_drawable" format="reference"/>

    <attr name="fab_menu_labels_color" format="reference"/>
    <attr name="fab_menu_labels_text_color" format="reference"/>

</resources>