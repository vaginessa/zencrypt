<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZenCrypt" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ZenCryptPrimary</item>
        <item name="colorPrimaryVariant">@color/ZenCryptDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ZenCryptSecondaryLight</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="materialButtonStyle">@style/ButtonColorDay</item>
        <item name="btnBackgroundTint">@color/lightBackgroundColor</item>
        <item name="btnTextColor">@color/ZenCryptPrimary</item>
        <item name="cardViewBackgroundColor">@color/white</item>
        <item name="encrypted_file_drawable">@drawable/shield_key_outline</item>
        <item name="decrypted_file_drawable">@drawable/file_remove_outline</item>
        <item name="fab_menu_labels_color">@color/fabMenuColorLight</item>
        <item name="fab_menu_labels_text_color">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="info_icon_drawable">@drawable/info_outline_black</item>
        <item name="chevron_drawable">@drawable/chevron_down</item>
        <item name="android:navigationBarColor">@color/nav_menu_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- colors for appbar layout day/night -->
        <item name="appBarTextColor">@android:color/white</item>
        <item name="appBarTitleIcon">@drawable/alpha_z_circle_light</item>
        <item name="appBarBackground">@color/lightBackgroundColor</item>
        <!-- nav menu color -->
        <item name="navMenuColor">@color/nav_menu_light</item>
        <!-- fix for MIUI force dark -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <!-- background colors as per material3 -->
        <item name="android:colorBackground">@color/lightBackgroundColor</item>
        <item name="colorSurface">@color/lightBackgroundColor</item>
        <item name="colorSurfaceVariant">@color/lightBackgroundColorVariant</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.Material3.Light.Dialog">
        <!-- Used for the title and text -->
<!--        <item name="android:textColor">@color/black</item>
        &lt;!&ndash; Used for the background &ndash;&gt;
        <item name="android:background">@color/colorPrimary</item>-->
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="dialogCornerRadius">14dp</item>
        <item name="windowNoTitle">true</item>
        <item name="btnTextColor">@color/ZenCryptPrimary</item>
        <item name="colorPrimary">@color/ZenCryptPrimary</item>
        <item name="colorAccent">@color/ZenCryptPrimary</item>
        <!-- background colors as per material3 -->
        <item name="colorSurface">@color/ZenCryptPrimary</item>
        <item name="android:colorBackground">@color/lightBackgroundColorVariant</item>
    </style>


    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ZenCryptPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/ZenCryptDark</item>
    </style>

    <style name="ToggleButtonWithIconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


</resources>